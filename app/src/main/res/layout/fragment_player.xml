<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fm"
            type="com.kady.muhammad.quran.heritage.presentation.player.PlayerFragment" />

        <variable
            name="vm"
            type="com.kady.muhammad.quran.heritage.presentation.player.PlayerViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        tools:context=".presentation.player.PlayerFragment">

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/loading"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha="0"
            android:indeterminate="true"
            app:mpb_progressStyle="horizontal"
            app:mpb_useIntrinsicPadding="false"
            tools:alpha="1" />

        <LinearLayout
            android:id="@+id/iconsContainer"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="top"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->fm.up()}"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/upIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_arrow_up" />

            </FrameLayout>

            <com.kady.muhammad.quran.heritage.presentation.widget.TwoStatesAVDImageView
                android:id="@+id/repeatOne"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->vm.toggleRepeatOne()}"
                android:scaleType="center"
                app:avd1="@drawable/repeat_one_to_active_avd_anim"
                app:avd2="@drawable/repeat_one_to_inactive_avd_anim" />

            <com.kady.muhammad.quran.heritage.presentation.widget.AVDImageView
                android:id="@+id/previous"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->fm.previous()}"
                android:scaleType="center"
                app:avd="@drawable/skip_previous_avd_anim" />

            <com.kady.muhammad.quran.heritage.presentation.widget.TwoStatesAVDImageView
                android:id="@+id/playPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->vm.playPause()}"
                android:scaleType="center"
                app:avd1="@drawable/play_to_pause_rounded_avd_anim"
                app:avd2="@drawable/pause_to_play_rounded_avd_anim" />

            <com.kady.muhammad.quran.heritage.presentation.widget.AVDImageView
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->fm.next()}"
                android:scaleType="center"
                app:avd="@drawable/skip_next_avd_anim" />

            <com.kady.muhammad.quran.heritage.presentation.widget.TwoStatesAVDImageView
                android:id="@+id/shuffle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->vm.toggleShuffle()}"
                android:scaleType="center"
                app:avd1="@drawable/shuffle_to_active_avd_anim"
                app:avd2="@drawable/shuffle_to_inactive_avd_anim" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="64dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/metaContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/empty_title"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="ما تيسر من سوره ال عمران" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/empty_sub_title"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    tools:text="عبدالباسط عبدالصمد" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/elapsedDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/time_res"
                    android:text="@string/zero_time"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="00:00:00" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/time_res"
                    android:text="@string/zero_time"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="00:00:00" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</layout>
